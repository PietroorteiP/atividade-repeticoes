programa {
  funcao inicio() {
    
  real base, expoente, potencia
  inteiro a

         potencia(base, potencia, expoente, a)
       }

  funcao potencia(real base, real expoente, real potencia, inteiro a ) {

   
    escreva("Escreva uma base e um expoente pra eu calcular o resultado da potenciação ")
    leia(base, expoente) 

    potencia = base
    a = 1

    enquanto(a < expoente){
    	a++
     potencia = potencia*base

     se(a == expoente)
     escreva("O resultado é igual a: ", potencia)
  }

    }



}
